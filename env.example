# Environment Configuration for Zappka-ZAPPKA Converter
# Copy this file to .env and fill in your details

# Server Configuration
PORT=3000
NODE_ENV=development

# Blockchain Configuration
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=your_private_key_here
CONTRACT_ADDRESS=0x... # Will be set after deployment

# Zappka Configuration
ZAPPKA_RECEIVER_ACCOUNT=your_zappka_account_number

# Security (Optional)
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Database (Optional - for production)
DATABASE_URL=postgresql://user:password@localhost:5432/zappka_converter
DB_DIALECT=postgresql

# CORS (Optional)
CORS_ORIGIN=*
